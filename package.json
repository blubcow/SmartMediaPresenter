    "@types/react-dom": "^17.0.0",
    "dotenv": "^10.0.0",
    "firebase": "^9.6.1",
    "font-list": "^1.4.2",
    "i18next": "^21.3.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-edit-text": "^4.2.0",
    "react-full-screen": "^1.1.0",
    "react-i18next": "^11.13.0",
